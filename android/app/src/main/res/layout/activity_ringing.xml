<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ringing_background">

    <!-- Top Section - Contact Info Style -->
    <LinearLayout
        android:id="@+id/ringing_top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp">

        <!-- Habit Icon (Large, like contact photo) -->
        <ImageView
            android:id="@+id/ringing_habit_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:background="@drawable/ringing_icon_background"
            android:layout_marginBottom="32dp" />

        <!-- Incoming habit text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incoming Habit"
            android:textSize="16sp"
            android:textColor="@color/ringing_text_secondary"
            android:layout_marginBottom="8dp" />

        <!-- Habit Name -->
        <TextView
            android:id="@+id/ringing_habit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morning Exercise"
            android:textSize="32sp"
            android:textColor="@color/ringing_text_primary"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Habit Message -->
        <TextView
            android:id="@+id/ringing_habit_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time to complete your habit!"
            android:textSize="16sp"
            android:textColor="@color/ringing_text_secondary"
            android:gravity="center"
            android:layout_marginHorizontal="32dp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

    <!-- Bottom Section - Call Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="48dp">

        <!-- Decline Button (Red) -->
        <ImageButton
            android:id="@+id/ringing_decline"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_call_end"
            android:background="@drawable/ringing_button_decline"
            android:contentDescription="Decline habit reminder"
            android:layout_marginEnd="80dp" />

        <!-- Answer Button (Green) -->
        <ImageButton
            android:id="@+id/ringing_answer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_call_answer"
            android:background="@drawable/ringing_button_answer"
            android:contentDescription="Answer habit reminder" />

    </LinearLayout>

    <!-- Call Status Indicators -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_above="@id/ringing_decline"
        android:layout_marginBottom="32dp">

        <!-- Ringing Indicator -->
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_ringing"
            android:tint="@color/ringing_text_secondary"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habit reminder"
            android:textSize="14sp"
            android:textColor="@color/ringing_text_secondary" />

    </LinearLayout>

</RelativeLayout>