<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/alarm_background"
    android:gravity="center"
    android:padding="32dp">

    <!-- Large Time Display -->
    <TextView
        android:id="@+id/alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07:30"
        android:textSize="80sp"
        android:textColor="@color/alarm_text_primary"
        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="24dp" />

    <!-- Alarm Icon -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_alarm"
        android:tint="@color/alarm_text_primary"
        android:layout_marginBottom="32dp" />

    <!-- Habit Name -->
    <TextView
        android:id="@+id/alarm_habit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Morning Exercise"
        android:textSize="28sp"
        android:textColor="@color/alarm_text_primary"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Habit Message -->
    <TextView
        android:id="@+id/alarm_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time to complete your habit!"
        android:textSize="18sp"
        android:textColor="@color/alarm_text_secondary"
        android:gravity="center"
        android:layout_marginBottom="48dp"
        android:lineSpacingExtra="4dp" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="48dp">

        <!-- Snooze Button -->
        <Button
            android:id="@+id/alarm_snooze"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="SNOOZE"
            android:textSize="16sp"
            android:textColor="@color/alarm_text_primary"
            android:background="@drawable/alarm_button_snooze"
            android:layout_marginEnd="32dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Dismiss Button -->
        <Button
            android:id="@+id/alarm_dismiss"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="DISMISS"
            android:textSize="16sp"
            android:textColor="@color/alarm_button_dismiss_text"
            android:background="@drawable/alarm_button_dismiss"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Bottom spacing -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="64dp" />

</LinearLayout>